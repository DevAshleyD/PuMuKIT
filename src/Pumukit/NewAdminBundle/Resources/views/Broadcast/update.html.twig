<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
  <h4 class="modal-title" id="myModalLabel">{% trans %}modify broadcast{% endtrans %}</h4>
</div>
<div class="modal-body">
  {% form_theme form 'PumukitNewAdminBundle:Themes:fields.html.twig' %}
 <form onsubmit="$('#myModal').modal('hide');
                  $.ajax({
                          url: '{{ path('pumukitnewadmin_broadcast_update', {'id': broadcast.id}) }}',
                          method: 'POST',
                          data: $(this).serialize(),
                          success: function(response, textStatus, jqXHR){
                                               if (jqXHR.responseText.indexOf('modal-header') != -1){
                                                     var message = '{% trans %}There was an error in updating the Broadcast.{% endtrans %}';
                                                     no_success(message);
                                               }else{
                                                     $('#list_broadcasts').html(response);
                                                     var message = '{% trans %}Broadcast successfully updated.{% endtrans %}';
                                                     success(message);
                                               }
                          },
                          error: function(jqXHR, textStatus, errorThrown){
                                               no_success(errorThrown+': '+textStatus);
                          }
                  });
                  return false;"
       action="{{ path('pumukitnewadmin_broadcast_update', {'id': broadcast.id}) }}" method="POST">
    <fieldset>
      {% for child in form %}
        {{ form_row(child) }}
      {% endfor %}
    </fieldset>
    <div class="modal-footer">
      <button type="button" class="btn btn-default btn-raised" data-dismiss="modal">{% trans %}Close{% endtrans %}</button>
      <button type="submit" class="btn btn-primary btn-raised">{% trans %}Save changes{% endtrans %}</button>
    </div>
  </form>
</div>

