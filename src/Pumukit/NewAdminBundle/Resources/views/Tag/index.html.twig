{% extends 'PumukitNewAdminBundle::layout.html.twig' %}

{% block body %}
<h1>{% trans %}Tags{% endtrans %}</h1>


<div class="col-md-12">
  <div class="well">
    <div id="list_people">
      {% include 'PumukitNewAdminBundle:Tag:list.html.twig' %}
    </div>
  </div>

  <div class="row">
    <div class="col-md-2">
      <select id="options_people" class="form-control" title="{% trans %}Actions on selected items{% endtrans %}" onchange="window.change_select('person', $(this))">
        <option value="default" selected="selected">{% trans %}Select an action...{% endtrans %}</option>
        <option disabled="">---</option>
        <option value="delete_selected">{% trans %}Delete selected{% endtrans %}</option>
        <option value="create">{% trans %}Create new{% endtrans %}</option>
      </select>
    </div>

    <div class="col-md-2 col-md-offset-8" align="right">
      {% if root %}
          <a href="{{ path('pumukitnewadmin_tag_create', {'parent': root.id}) }}" class="btn btn-warning" data-toggle="modal" data-target="#myModal">{% trans %}create{% endtrans %}</a>
      {% endif%}
    </div>
  </div>
</div>


<script type="text/javascript">
function load_children_tag(id, cod) {
  $$(".c_" + cod).each(function(e){ e.remove() });
  var tr = $('row_tag_' +id);
  var level = tr.getAttribute('data-level');
  var url = '{{ path('pumukitnewadmin_tag_children', {'id': '___id___'}) }}';
  new Ajax.Request(url.replace('___id___', id) , {
    method: 'GET',
    asynchronous:true,
    evalScripts:true,
    onSuccess: function(response) {
      var t = tr.up('tbody');
      var ss = t.childElements();
      var b_move = false;
      for (var i=0;i<ss.length;i++) {
        if(b_move) t.insert(ss[i]);
        if (ss[i] == tr) {
	  b_move = true;
	  t.insert(response.transport.response);
	}
      }
      if ($$('.d_' + cod).length != 0) {
	$$('#row_tag_' + id + ' .element').each(function(e){
						  e.classList.add("expanded");
						  e.classList.remove("element")});
      }
    }
  });

}

function toggle_section_tag(id, element, level, cod) {

  if(element.parentElement.classList.contains("expanded")){
    $$(".c_" + cod).each(function(e){
      e.getElementsBySelector(".expanded").each(function(ee){ee.classList.remove("expanded").classList.add("collapsed");});
      e.hide();
    });
  }else{
    if(element.parentElement.classList.contains("noload")) {
      element.parentElement.classList.remove("noload");
      load_children_tag(id, cod);
    }else {
      $$(".d_" + cod).each(function(e){e.show()});
    }
  }
  element.parentElement.classList.toggle("expanded").toggle("collapsed");
}


function tag_relation_change(one_id, two_id, value) {
  new Ajax.Request("/editar.php/categories/changetag/oneid/" + one_id + "/twoid/" + two_id + "/value/" + value,  {
    asynchronous: true,
    evalScripts: true,
  });
}


function tag_delete(id, cod, pid) {
  if (window.confirm('{% trans %}Are you sure you want to delete the tag with code{% endtrans %} ' + cod + '?')) {
    var url = '{{ path('pumukitnewadmin_tag_delete', {'id': '___id___'}) }}';
    new Ajax.Request(url.replace('___id___', id), {
      metod: 'DELETE',
      asynchronous:true,
      evalScripts:true,
      parameters:  {'_method': 'DELETE'},
      onFailure: function() {window.alert('{% trans %}Tags with children can not be deleted.{% endtrans %}')},
      onSuccess: function(response) {
        $('row_tag_' +id).remove();
        if ($$('.d_' + pid).length == 0) {
	  $$('#row_tag_' + pid + ' .expanded').each(function(e){
						     e.classList.remove("expanded");
						     e.classList.add("element")});
      }
      }
    });
  }
  return false;
}

function tag_error(action){
  $('div_messages_span_error').innerHTML ='{% trans %}Error on{% endtrans %} ' + action + ' {% trans %}the tag. Existing Code{% endtrans %}';
  new Effect.Opacity('div_messages_error', {duration:7.0, from:1.0, to:0.0});
}

</script>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
    </div>
  </div>
</div>
{% endblock %}
