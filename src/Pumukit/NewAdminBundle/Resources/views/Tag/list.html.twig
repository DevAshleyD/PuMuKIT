<div class="table-responsive well">
  {% if app.user and is_granted(constant('Pumukit\\SchemaBundle\\Security\\Permission::ACCESS_TAGS')) %}
  <table class="table table-striped table-hover pmk-tag-tree">
    <thead>
      <tr>
        <th id="th-checkbox" width="1%">
          <div class="checkbox">
            <label>
              <input type="checkbox" onclick="window.click_checkbox_all('tag', this.checked)">
            </label>
          </div>
        </th>
        <th id="th-icons" colspan="3" width="3%"></th>
        <th id="th-id" width="1%">{% trans %}Id{% endtrans %}</th>
        <th id="th-code-name">{% trans %}Code - Name{% endtrans %}</th>
        <th id="th-num">{% trans %}MM. Obj.{% endtrans %}</th>
      </tr>
    </thead>
    <tbody>
      {% if not root %}
      <tr>
        <td headers="th-checkbox th-icons th-icons th-icons th-id th-code-name th-num" colspan="8">
          {% trans %}There are no tags with those values.{% endtrans %}
        </td>
      </tr>
      {% else %}
        {% include 'PumukitNewAdminBundle:Tag:children.html.twig' %}
      {% endif %}
    </tbody>
    <tfoot>
      <tr>
        <td colspan="8" class="foot-td">
          &nbsp;
        </th>
      </tr>
    </tfoot>
  </table>
  {% else %}
    {% trans %}You don't have enough permissions to access this content.{% endtrans %}
  {% endif %}
</div>
