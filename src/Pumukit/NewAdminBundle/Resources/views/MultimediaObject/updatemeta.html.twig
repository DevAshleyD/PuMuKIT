{% form_theme form_meta 'PumukitNewAdminBundle:Themes:fields.html.twig' %}

<div id="tv_admin_container" class="well">

  <form id="pumukitnewadmin_mms_updatemeta_form"
        action="{{ path('pumukitnewadmin_mms_update_meta', {'id': mm.id}) }}" method="POST">

	<input type="hidden" name="id" id="id" value="{{ mm.id }}">
	<input type="hidden" name="series_id" id="series_id" value="{{ series.id }}">

    <div class="row">
      <div class="col-md-6">
	    <span id="remember_save_mm" class="alert alert-dismissable alert-danger" style="display:none;vertical-align:middle;">{% trans %}Press OK for changes to take effect{% endtrans %}</span> &nbsp;
      </div>

      <div class="col-md-6 text-right">
        <button type="button" class="btn btn-default btn-raised" onclick="$('#remember_save_mm').hide();">{% trans %}Cancel{% endtrans %}</button>
        <button type="submit" class="btn btn-pumukit btn-raised">{% trans %}OK{% endtrans %}</button>
      </div>
    </div>

	<fieldset>
      <div class="col-md-7">

  	    {% for child in form_meta %}
        {{ form_row(child) }}
	    {% endfor %}

      </div>
	</fieldset>
  </form>
</div>
