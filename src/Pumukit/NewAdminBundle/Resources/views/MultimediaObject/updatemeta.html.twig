{% form_theme form_meta 'PumukitNewAdminBundle:Themes:fields.html.twig' %}

<div id="tv_admin_container" class="well">

  <form onsubmit="$.ajax({
                          url: '{{ path('pumukitnewadmin_mms_update_meta', {'id': mm.id}) }}',
                          type: 'POST',
                          data: $(this).serialize(),
                          error: function(request, json){var message = '{% trans %}Saved ERROR{% endtrans %}'; no_success(message);},
                          success: function(response){
                                                      $('#list_mms').html(response);
                                                      $('#preview_mm').load('{{ path('pumukitnewadmin_mms_show', {'id': mm.id}) }}');
                                                      var message = '{% trans %}Saved OK{% endtrans %}';
                                                      success(message);
                                                      }
                  });
		          return false;"
        action="{{ path('pumukitnewadmin_mms_update_meta', {'id': mm.id}) }}" method="POST">

	<input type="hidden" name="id" id="id" value="{{ mm.id }}">
	<input type="hidden" name="series_id" id="series_id" value="{{ series.id }}">

    <div class="row">
      <div class="col-md-3">
	    <div id="remember_save_mm" class="alert alert-dismissable alert-danger" style="display:none;">
          {% trans %}Press OK for changes to take effect{% endtrans %}
        </div>
      </div>
      <div class="col-md-2 col-md-offset-3">
        <span id="mm_save_error" style="display:none; color:red;">{% trans %}Saved ERROR{% endtrans %}</span>
      </div>
      <div class="col-md-2">
        <span id="mm_save_ok" style="display:none; color:indigo;">{% trans %}Saved OK{% endtrans %}</span>
      </div>
      <div class="col-md-2 text-right">
        <button type="button" class="btn btn-default btn-raised" onclick="$('#remember_save_mm').hide();">{% trans %}Cancel{% endtrans %}</button>
        <button type="submit" class="btn btn-pumukit btn-raised" onclick="$('#remember_save_mm').hide();">{% trans %}OK{% endtrans %}</button>
      </div>
    </div>

	<fieldset>
      <div class="col-md-7">

  	    {% for child in form_meta %}
        {{ form_row(child) }}
	    {% endfor %}

      </div>
	</fieldset>
  </form>
</div>

<script type="text/javascript">
$(document).ready(function() {
    $("*[id^='pumukitnewadmin_mms_meta_']").on('change', function(){
        $('#remember_save_mm').show();
    });
});
</script>
