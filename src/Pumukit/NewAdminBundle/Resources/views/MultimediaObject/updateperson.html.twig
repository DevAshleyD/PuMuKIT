<div class="well">
  <fieldset class="">
    <dl style="margin: 0px">
      {% if personal_scope_role %}
      <div class="form-row">
        <dt>{{ personal_scope_role.getName() }}{{ personal_scope_role.getDisplay()?'*':'' }}:</dt>
        <dd>
          <div id="{{ personal_scope_role.getId() }}_person_mms{{ template }}">
	        {% include 'PumukitNewAdminBundle:Person:listrelation.html.twig' with {'people': mm.getPeopleByRole(personal_scope_role, true), 'mm': mm, 'role': personal_scope_role} %}
          </div>
        </dd>
      </div>
      <hr class="pumukit-green"/>
      {% endif %}
      {% for role in roles if role.getCod() != personal_scope_role_code %}
      <div class="form-row">
        <dt>{{ role.getName() }}{{ role.getDisplay()?'*':'' }}:</dt>
        <dd>
          <div id="{{ role.getId() }}_person_mms{{ template }}">
	        {% include 'PumukitNewAdminBundle:Person:listrelation.html.twig' with {'people': mm.getPeopleByRole(role, true), 'mm': mm, 'role': role} %}
          </div>
        </dd>
      </div>
      {% endfor %}
    </dl>
  </fieldset>
</div>
