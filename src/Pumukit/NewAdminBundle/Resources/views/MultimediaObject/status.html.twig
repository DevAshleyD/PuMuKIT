{% if mm.getProperty('executing_jobs') or mm.getProperty('pending_jobs') %}
  <i class="mdi-navigation-refresh pmk-job-animate table_mms_job_animate" data-toggle="tooltip" data-placement="right" title="{% spaceless %}
      {% transchoice mm.getProperty('pending_jobs')|length %}
          {0} |{1} 1 pending job.  |]1,Inf[ %count% pending jobs.
      {% endtranschoice %}
      {% transchoice mm.getProperty('executing_jobs')|length %}
          {0} |{1} 1 executing job. |]1,Inf[ %count% executing jobs.
      {% endtranschoice %}
      {% endspaceless %}"></i>
{% else%}
  <i id="table_mms_status_{{ mm.id }}" class="{{ mm.status|status_icon }}" data-toggle="tooltip" data-placement="right" title="{{ mm.status|status_text }}"></i>
{% endif %}


{% if 'XMLHttpRequest' == app.request.headers.get('X-Requested-With') %}
<script type="text/javascript">
window.check_for_new_pics('{{ mm.id }}', {{mm.getPics()|length}} );
</script>
{% endif %}
