{% extends 'PumukitNewAdminBundle::layout.html.twig' %}

{% block body %}

<h1>{% trans %}Users{% endtrans %}</h1>

<div class="row">
  <div class="col-md-10">
    <div class="well">
      <div id="list_users">
        {% include 'PumukitNewAdminBundle:User:list.html.twig' %}
      </div>
      <div class="row">
        <div class="col-md-2">
          <select id="options_user" class="form-control" title="{% trans %}Actions on selected items{% endtrans %}" onchange="window.change_select('user', $(this), 'user');">
            <option value="default" selected="selected">{% trans %}Select an action...{% endtrans %}</option>
            <option disabled="">---</option>
            <option value="delete_selected">{% trans %}Delete selected{% endtrans %}</option>
            <option value="create">{% trans %}Create new{% endtrans %}</option>
          </select>
        </div>
        <div class="col-md-10 text-right">
          <a href="{{ path('pumukitnewadmin_user_create') }}" class="btn btn-pumukit" data-toggle="modal" data-target="#myModal">{% trans %}New{% endtrans %}</a>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-2">
    {% include 'PumukitNewAdminBundle:User:filters.html.twig' %}
  </div>
</div>


