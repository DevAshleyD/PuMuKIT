{% if app.user and is_granted(constant('Pumukit\\SchemaBundle\\Security\\Permission::ACCESS_ADMIN_USERS')) %}
{% for group in groups %}
<a href="#" 
   id="not_added_group_{{ group.id }}_{{ mode }}"
   onclick="javascript:return select_group(this);" 
   ondblclick="javascript:add_group('{{ group.id }}', '{{ user.id }}', '{{ mode }}', '{{ group.key }}', '{{ group.name }}');"
   class="list-group-item notload tag_li_parent_{{ mode }}">
  <i class="mdi-social-group"></i>
  {{ group.key }} - {{ group.name }}
</a>
{% endfor %}
{% endif %}
