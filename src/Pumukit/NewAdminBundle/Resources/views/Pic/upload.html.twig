<script type="text/javascript">

  parent.$('#myModal').modal('hide');

  var isBanner = '{{ isBanner }}';
  if (isBanner) {
    parent.$('#edit_series').load('{{ path('pumukitnewadmin_'~resource_name~'_update', {'id': resource.id}) }}');
  } else {
    parent.$('#pic_{{ resource_name }}_{{ resource.id }}').load('{{ path('pumukitnewadmin_'~resource_name~'pic_list', {'id': resource.id}) }}');
    parent.$('#pic_{{ resource_name }}_{{ resource.id }}').html('{% trans %}Update the video to show the images{% endtrans %}.');
  }

  var uploaded = '{{ uploaded }}';

  if ('success' == uploaded) parent.success('{% trans %}New Pic added.{% endtrans %}');
  else parent.no_success('{{ message }}');
</script>
