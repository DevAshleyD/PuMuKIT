<!-- Filter -->
<div class="well">
  <form id="filter_roles"  action="{{ path('pumukitnewadmin_role_index') }}" method="get">
  <fieldset>
    <legend hidden>{% trans %}Filter Roles{% endtrans %}</legend>
    <h2>{% trans %}Search{% endtrans %}</h2>

    <div class="form-group">
      <label for="filters_cod" class="control-label">{% trans %}Cod{% endtrans %}:</label>
      {% set criteria = app.session.get('admin/role/criteria') %}
      <div>
        <input type="text" class="reset form-control" name="criteria[cod]" id="filters_cod" value="{{ criteria['cod']|default("") }}">
      </div>
    </div>

  </fieldset>

  <div class="text-right">
    <input class="btn btn-default btn-raised" onclick="window.location.href='?criteria[reset]=true'" type="button" value="{% trans %}reset{% endtrans %}">
    <input class="btn btn-pumukit btn-raised" type="submit" name="filter" value="{% trans %}filter{% endtrans %}">
  </div>
</form>
</div>
