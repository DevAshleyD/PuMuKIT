<div class="table-responsive well">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th width="20%">{% trans %}Clearances{% endtrans %}</th>
          {% for userclearance in userclearances %}
          <th width="1%">{% if not userclearance.system %}{% include 'PumukitNewAdminBundle:UserClearance:updatemenu.html.twig' %}{% endif %}</th>
          <th width="8%">{{ userclearance.name }}</th>
          {% else %}
          <th>{% trans %}There are no user clearances with those values.{% endtrans %}</th>
          {% endfor %}
        </tr>
      </thead>
      <tbody>
        {% if clearances is empty %}
        <tr>
          <td colspan="8">
            {% trans %}There are no clearances with those values.{% endtrans %}
          </td>
        </tr>
        {% endif %}
        <tr>
          <td>{% trans %}Scope{% endtrans %}</td>
          {% for userclearance in userclearances %}
          <td></td>
          <td>
            {% include 'PumukitNewAdminBundle:UserClearance:updatescope.html.twig' %}
          </td>
          {% endfor %}
        </tr>
        {% for key,clearance in clearances %}
        <tr>
          <td>
            {{ clearance }}
          </td>
          {% for userclearance in userclearances %}
          <td></td>
          <td>
            <div class="checkbox{{ userclearance.system ? ' pmk_disabled_checkbox'}}">
              <label>
                <input id="{{ userclearance.id }}" class="userclearance_checkbox" type="checkbox" size="1"{{ userclearance.containsClearance(key) ? ' checked="checked"':'' }}{{ userclearance.system ? ' disabled="disabled"':'' }}>
              </label>
            </div>
          </td>
          {% endfor %}
        </tr>
        {% endfor %}
      </tbody>
    </table>
</div>
