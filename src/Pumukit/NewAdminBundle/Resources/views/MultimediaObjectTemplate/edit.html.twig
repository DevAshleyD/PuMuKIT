{% if mmtemplate %}
<div>
  <div role="tabpanel">
    <!-- actualizar vistaPrevia -->
    <ul id="menuTab" class="nav nav-tabs nav-tabs-pumukit" role="tablist">
      <li class="active">
        <a href="#metaMmTemplate" aria-controls="metaMmTemplate" role="tab" data-toggle="tab">{% trans %}Metadata{% endtrans %}</a>
      </li>
      <li>
        <a href="#tagMmTemplate" aria-controls="tagMmTemplate" role="tab" data-toggle="tab">{% trans %}Tags{% endtrans %}</a>
      </li>
      <li>
        <a href="#personMmTemplate" aria-controls="personMmTemplate" role="tab" data-toggle="tab">{% trans %}People{% endtrans %}</a>
      </li>
    </ul>
    <div class="tab-content">
      <div id="metaMmTemplate" role="tabpanel" class="tab-pane active">
        {% include 'PumukitNewAdminBundle:MultimediaObjectTemplate:updatemeta.html.twig' with {'mm': mmtemplate} %}
      </div>
      
      <div id="tagMmTemplate" role="tabpanel" class="tab-pane">
        {% include 'PumukitNewAdminBundle:MultimediaObject:updatetag.html.twig' with {'mm': mmtemplate, 'parent_tags': parent_tags} %}
      </div>
      
      <div id="personMmTemplate" role="tabpanel" class="tab-pane">
        {% include 'PumukitNewAdminBundle:MultimediaObject:updateperson.html.twig' with {'mm': mmtemplate, 'roles': roles} %}
      </div>
    </div>
  </div>
</div>
{% endif %}

<script type="text/javascript">
window.submit_delete_person_relation_template = function(id, roleId, mmId, hName)
{
    if (window.confirm("{% trans %}Are you sure you want to delete the relation of{% endtrans %} "+hName+"?")){
        var tag_person_id = roleId+'_person_mms_template';
        var url = "{{ path('pumukitnewadmin_person_delete_relation', {'id': '__id__', 'roleId': '__roleId__','mmId': '__mmId__'}) }}";
        url = url.replace('__id__', id);
        url = url.replace('__roleId__', roleId);
        url = url.replace('__mmId__', mmId);
        new Ajax.Updater(tag_person_id, url, {asynchronous:true, evalScripts:true, method:'POST', parameters: {'_method': 'DELETE'}});
    }
}
</script>
