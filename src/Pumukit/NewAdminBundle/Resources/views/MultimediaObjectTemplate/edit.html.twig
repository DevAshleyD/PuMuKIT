{% if mmtemplate %}
<div class="well">

  <div style="text-align:right;">
    <a href="#" onclick="$('#edit_series').innerHTML=''; return false"><img src="/legacy/images/admin/buttons/close.png" alt="{% trans %}CLOSE{% endtrans %}" /></a>
  </div>

  <div role="tabpanel">
    <!-- actualizar vistaPrevia -->
    <ul id="menuTab" class="nav nav-tab" role="tablist">
      <li role="presentation" class="active">
        <a href="#metadata" aria-controls="metaMmTemplateDiv" role="tab" data-toggle="tab">{% trans %}Metadata{% endtrans %}</a>
      </li>
      <li role="presentation">
        <a href="#tags" aria-controls="tagMmTemplateDiv" role="tab" data-toggle="tab">{% trans %}Tags{% endtrans %}</a>
      </li>
      <li role="presentation">
        <a href="#people" aria-controls="personMmTemplateDiv" role="tab" data-toggle="tab">{% trans %}People{% endtrans %}</a>
      </li>
    </ul>

    <div class="background_id">
      {% trans %}Default values for series{% endtrans %} {{ mmtemplate.getSeries().getId() }}
    </div>

    <div class="tab-content">
      <div id="metaMmTemplateDiv" role="tabpanel" class="tab-pane active">
        {% include 'PumukitNewAdminBundle:MultimediaObjectTemplate:updatemeta.html.twig' with {'mm': mmtemplate} %}
      </div>
      
      <div id="tagMmTemplateDiv" role="tabpanel" class="tab-pane active">
        {% include 'PumukitNewAdminBundle:MultimediaObjectTemplate:updatetags.html.twig' with {'mm': mmtemplate, 'parent_tags': parent_tags} %}
      </div>
      
      <div id="personMmTemplateDiv" role="tabpanel" class="tab-pane active">
        {% include 'PumukitNewAdminBundle:MultimediaObject:updateperson.html.twig' with {'mm': mmtemplate, 'roles': roles} %}
      </div>
    </div>
  </div>
  
</div>
{% endif %}

<script type="text/javascript">
window.submit_delete_person_relation_template = function(id, roleId, mmId, hName)
{
    if (window.confirm("{% trans %}Are you sure you want to delete the relation of{% endtrans %} "+hName+"?")){
        var tag_person_id = roleId+'_person_mms_template';
        var url = "{{ path('pumukitnewadmin_person_delete_relation', {'id': '__id__', 'roleId': '__roleId__','mmId': '__mmId__'}) }}";
        url = url.replace('__id__', id);
        url = url.replace('__roleId__', roleId);
        url = url.replace('__mmId__', mmId);
        new Ajax.Updater(tag_person_id, url, {asynchronous:true, evalScripts:true, method:'POST', parameters: {'_method': 'DELETE'}});
    }
}
</script>
