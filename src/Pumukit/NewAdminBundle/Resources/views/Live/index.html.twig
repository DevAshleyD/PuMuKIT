{% extends 'PumukitNewAdminBundle::layout.html.twig' %}

{% block body %}

<h1>{% trans %}Live channels{% endtrans %} </h1>

<div class="row">
  <div class="col-md-10">
    <div class="well">
      <div id="list_lifes">
        {% include 'PumukitNewAdminBundle:Live:list.html.twig' %}
      </div>
      <div class="row">
        <div class="col-md-2">
          <select id="options_lifes" class="form-control" title="{% trans %}Actions on selected items{% endtrans %}" onchange="window.change_select('live', $(this), 'lifes')">
            <option value="default" selected="selected">{% trans %}Select an action...{% endtrans %}</option>
            <option disabled="">---</option> {# TODO review this actions on javascript (rename) #}
            <option value="delete_sel">{% trans %}Delete selected{% endtrans %}</option>
            <option value="create">{% trans %}Create new{% endtrans %}</option>
          </select>
        </div>
        <div class="col-md-10 text-right">
          <a title="{% trans %}Create new live channel{% endtrans %}" class="btn btn-pumukit btn-raised" href="#" onclick="$('#filter_lifes')[0].reset(); $('#list_lifes').load('{{ path('pumukitnewadmin_live_create') }}'); return false;">{% trans %}New{% endtrans %}</a>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-2">
    <div id="preview_live" class="well">
      {% if(app.session.has('admin/live/id')) %}
        {{ render_hinclude(url('pumukitnewadmin_live_show', {'id': app.session.get('admin/live/id')})) }}
      {% else %}
        {% trans %}Select any live channel.{% endtrans %}
      {% endif %}
    </div>
    {% include 'PumukitNewAdminBundle:Live:filters.html.twig' %}
  </div>
</div>

{% endblock %}
