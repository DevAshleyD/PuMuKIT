<div id="broadcast_groups" class="panel panel-default pumukitnewadmin-broadcast-margin{{ embeddedBroadcast ? ((embeddedBroadcast.getType() == broadcast_type) ? '':' pumukitnewadmin-broadcast-hidden') : ' pumukitnewadmin-broadcast-hidden' }}">
  <input type="hidden" id="series_id" value="{{ series.id }}"/>
  <div class="panel-heading">
    {% trans %}BROADCAST GROUPS{% endtrans %}
  </div>
  <div class="panel-body" id="group_broadcast">
    <div class="row" style="margin-right: 0px; margin-left: 0px;">
      <div style="width:415px; float: left;">
        {% trans %}Available Groups{% endtrans %}:
      </div>
      <div style="width:375px; float: left;">
        <strong>{% trans %}Selected Groups{% endtrans %}:</strong>
      </div>
    </div>
    <div style="overflow:hidden;height: 240px">
	  <div style="width:375px; float: left; height: 220px; border: 1px solid #bbb; overflow-x: hidden; overflow-y: scroll" class="tag list-group pmk-tag-tree" id="delete_broadcast_groups">
        {% if embeddedBroadcast %}
        {% set resource_groups = embeddedBroadcast.getGroups() %}
        {% else %}
        {% set resource_groups = [] %}
        {% endif %}
        {% include 'PumukitNewAdminBundle:Series:availablegroups.html.twig' with {'resource_groups': resource_groups, 'groups': groups, 'resource_name': 'broadcast'} %}
	  </div>
	  <div style="float: left; padding: 110px 5px 0px">
	    <a href="#" onclick="$('#add_broadcast_groups > a.active').trigger('dblclick'); return false;">&#8592;</a>
	    <a href="#" onclick="$('#delete_broadcast_groups > a.active').trigger('dblclick'); return false;">&#8594;</a>
	  </div>
      {# Groups added to all the multimedia object in the series #}
	  <div style="width:375px; height:220px; border: 1px solid #bbb; float: left; overflow-x: hidden; overflow-y: scroll" class="tag" id="added_broadcast_groups">
	    <div class="tag_tree list-group" id="add_broadcast_groups" >
          {% if embeddedBroadcast %}
          {% include 'PumukitNewAdminBundle:Series:selectedgroups.html.twig' with {'resource': embeddedBroadcast, 'groups': groups, 'resource_name': 'broadcast'} %}
          {% endif %}
	    </div>
      </div>
	</div>
  </div>
</div>
