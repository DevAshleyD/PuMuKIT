<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
  <h3 class="modal-title" id="myModalLabel">{% trans %}Modify broadcast profile of all multimedia object in this Series{% endtrans %}</h3>
</div>
<div class="modal-body">
  <form autocomplete="off" id="pumukitnewadmin_series_updatebroadcast_submit"
     action="{{ path('pumukitnewadmin_series_updatebroadcast', {'id': series.id}) }}" method="POST">
    <fieldset>
      <input type="hidden" id="pumukitnewadmin_series_broadcast_series_id" name="" value="{{ series.id }}"/>
      <div class="form-group">
        <label class="control-label required">{% trans %}Broadcast Profile{% endtrans %}</label>
        <div id="pumukitnewadmin_series_broadcast_broadcast">
          {% for broadcast_type, broadcast_name in broadcasts %}
          <div class="radio">
            <label class="required">
              <input id="pumukitnewadmin_series_broadcast_type_{{ broadcast_type }}" name="pumukitnewadmin_mms_broadcast" required="required" value="{{ broadcast_type }}" type="radio"><span class="circle"></span><span class="check"></span>
              {{ broadcast_name }}
            </label>
            {% if broadcast_type == constant('Pumukit\\SchemaBundle\\Document\\EmbeddedBroadcast::TYPE_PUBLIC') %}
            <i class="mdi-action-info" data-toggle="tooltip" data-placement="right" title="{% trans %}Any Internet user can play this multimedia object in the video portal{% endtrans %}"></i>
            {% elseif broadcast_type == constant('Pumukit\\SchemaBundle\\Document\\EmbeddedBroadcast::TYPE_PASSWORD') %}
            :&nbsp;<i class="mdi-action-info" data-toggle="tooltip" data-placement="right" title="{% trans %}Only users with the defined password can play this multimedia object in the video portal{% endtrans %}"></i>
            {% elseif broadcast_type == constant('Pumukit\\SchemaBundle\\Document\\EmbeddedBroadcast::TYPE_LOGIN') %}
            <i class="mdi-action-info" data-toggle="tooltip" data-placement="right" title="{% trans %}Only logged in users in the system can play this multimedia object in the video portal{% endtrans %}"></i>
            {% elseif broadcast_type == constant('Pumukit\\SchemaBundle\\Document\\EmbeddedBroadcast::TYPE_GROUPS') %}
            :&nbsp;<i class="mdi-action-info" data-toggle="tooltip" data-placement="right" title="{% trans %}Only users in the selected Groups can play this multimedia object in the video portal{% endtrans %}"></i>
            {% endif %}
          </div>
            {% if broadcast_type == constant('Pumukit\\SchemaBundle\\Document\\EmbeddedBroadcast::TYPE_PASSWORD') %}
            {% include 'PumukitNewAdminBundle:Series:broadcastpassword.html.twig' %}
            {% elseif broadcast_type == constant('Pumukit\\SchemaBundle\\Document\\EmbeddedBroadcast::TYPE_GROUPS') %}
            {% include 'PumukitNewAdminBundle:Series:broadcastgroups.html.twig' with {'groups': groups} %}
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </fieldset>
    <div class="modal-footer">
      <button type="button" class="btn btn-default btn-raised" data-dismiss="modal">{% trans %}Close{% endtrans %}</button>
      <button type="submit" id="pumukitnewadmin_series_broadcast_updategroup_submit" class="btn btn-pumukit btn-raised">{% trans %}Save changes{% endtrans %}</button>
    </div>
  </form>
</div>
