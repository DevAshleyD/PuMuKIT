<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
  <h4 class="modal-title" id="myModalLabel">{% trans %}create new person{% endtrans %}</h4>
</div>
<div class="modal-body">
  {% form_theme form 'PumukitNewAdminBundle:Themes:fields.html.twig' %}
  {{ form(form, {'action': path('pumukitadmin_person_update', {'id': person.id} )}) }}
<div class="modal-footer">
  <button type="button" class="btn btn-default" data-dismiss="modal">{% trans %}Close{% endtrans %}</button>
  <button type="button" class="btn btn-primary">{% trans %}Save changes{% endtrans %}</button>
</div>
