{% block a2lix_translations_widget %}



    
    {% set languages = [] %} 
    {% set llaves = [] %}
    {% for child in form %}
        {% if loop.first %}
            {% for key,value in child %}
                {% set llaves = llaves |merge([key]) %}
            {% endfor %}
        {% endif %}
        {% set languages = languages |merge([child.vars.name]) %}
    {% endfor %}
    
            
    
    {% set longitud = llaves|length %}
    {% for key in llaves %}
        
        {% for lang in languages %}
            <div class="form_row form-group ">
                <label for="pumukit_schemabundle_multimediaobjecttype_description" class="col-lg-1 control-label">{{ key }}</label>
                {{ form_widget(form[lang][key]) }}
            </div>
        {% endfor %}
       
    {% endfor %}


{% endblock %}



