{% extends 'PumukitCRUDBundle::base.html.twig' %}

{% block body -%}
<div class="container">
    <div class="page-header">
        <h1>Tag edit</h1>
    </div>
    <form class="form-horizontal" action="{{ path('tag_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        <p>
            <button class="btn btn-default" type="submit">Save</button>
        </p>
    </form>

    <ul class="record_actions list-unstyled list-inline">
        <li>
            <a href="{{ path('tag') }}">
                <button class="btn btn-link">Back to the list</button>
            </a>
        </li>
        <li>
            <form action="{{ path('tag_delete', { 'id': entity.id }) }}" method="post">
                <input type="hidden" name="_method" value="DELETE" />
                {{ form_widget(delete_form) }}
                <button class="btn btn-small btn-danger" type="submit">Delete</button>
            </form>
        </li>
    </ul>
</div>    
{% endblock %}
