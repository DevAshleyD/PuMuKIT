
{% extends 'PumukitCRUDBundle::base.html.twig' %}

{% block body -%}
<div class="container">
    <div class="page-header">
        <h1>Tag list</h1>
    </div>
    <table class="table span10  records_list table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Slug</th>
                <th>Cod</th>
                <th>Metatag</th>
                <th>Created</th>
                <th>Updated</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('tag_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.slug }}</td>
                <td>{{ entity.cod }}</td>
                <td>{{ entity.metatag }}</td>
                <td>{% if entity.created %}{{ entity.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.updated %}{{ entity.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul class="list-inline">
                    <li>
                        <a href="{{ path('tag_show', { 'id': entity.id }) }}"><button class="btn btn-info">show</button></a>
                    </li>
                    <li>
                        <a href="{{ path('tag_edit', { 'id': entity.id }) }}"><button class="btn btn">edit</button></a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul class="list-unstyled list-inline">
        <li>
            <a href="{{ path('tag_new') }}">
                <button class="btn btn-default">Create a new entry</button>
            </a>
        </li>
    </ul>
</div>
{% endblock %}
