{% extends 'PumukitCRUDBundle::base.html.twig' %}

{% block body -%}

    <div class="container-fluid">
        <div class="page-header">
            <h1>Person edit</h1>
        </div>
            
            
    
        <form class="form-horizontal" action="{{ path('person_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(form) }}>
            <input type="hidden" name="_method" value="PUT" />
            {{ form_errors(form) }}

            {{ form_widget(form) }}


            <button type="submit" id="btn_submit" class="btn btn-default navbar-btn pull-right">Guardar</button>
            
        {{ form_end(form) }}

        <ul class="pager">
            <li class="pull-left">
                <a href="{{ path('person') }}">&larr; Back to the list</a>
            </li>

            <form action="{{ path('person_delete', { 'id': entity.id }) }}" method="post">
                <input type="hidden" name="_method" value="DELETE" />
                {{ form_widget(delete_form) }}
                <button type="submit" class="btn navbar-btn btn-small btn-danger pull-right air-right">Delete</button>
            </form>
        </ul>        

        
    </div>
{% endblock %}
