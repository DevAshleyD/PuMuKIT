{% extends 'PumukitWizardBundle:Default:index.html.twig' %}
{% block wizard_body %}
<div class="well">
  <form id="pumukitwizard_series_form" autocomplete="off"
        action="{{ url('pumukitwizard_default_type', {'id': 'null'}) }}" method="POST">
    <input type="hidden" name="seriesId" id="seriesId" value="">
    <fieldset>
      <div class="form-group" id="pumukitwizard_series_i18n_title">
        <label for="pumukitwizard_series_i18n_title" class="control-label">{% trans %}Title{% endtrans %}</label>
        <div>
          {% for locale in locales %}
          <div class="input-group">
            <div class="form-control-wrapper">
              {% if series_data is not empty %}
              <input type="text" id="pumukitwizard_series_i18n_title_{{ locale }}" name="pumukitwizard_series[i18n_title][{{ locale }}]" class="form-control empty" value="{{ attribute(series_data.i18n_title, locale) }}">
              {% else %}
              <input type="text" id="pumukitwizard_series_i18n_title_{{ locale }}" name="pumukitwizard_series[i18n_title][{{ locale }}]" class="form-control empty" value="">
              {% endif %}
              <span class="material-input"></span>
            </div>
            <span class="input-group-addon">{{ locale }}</span>
          </div>
          {% endfor %}
        </div>
      </div>
      <div class="form-group" id="pumukitwizard_series_i18n_subtitle">
        <label for="pumukitwizard_series_i18n_subtitle" class="control-label">{% trans %}Subtitle{% endtrans %}</label>
        <div>
          {% for locale in locales %}
          <div class="input-group">
            <div class="form-control-wrapper">
              {% if series_data is not empty %}
              <input type="text" id="pumukitwizard_series_i18n_subtitle_{{ locale }}" name="pumukitwizard_series[i18n_subtitle][{{ locale }}]" class="form-control empty" value="{{ attribute(series_data.i18n_subtitle, locale) }}">
              {% else %}
              <input type="text" id="pumukitwizard_series_i18n_subtitle_{{ locale }}" name="pumukitwizard_series[i18n_subtitle][{{ locale }}]" class="form-control empty" value="">
              {% endif %}
              <span class="material-input"></span>
            </div>
            <span class="input-group-addon">{{ locale }}</span>
          </div>
          {% endfor %}
        </div>
      </div>
    </fieldset>
    <div class="row">
      <div class="col-md-12">
        <div class="text-right">
          <button type="button" class="btn btn-default btn-raised">{% trans %}Cancel{% endtrans %}</button>
          <button type="submit" class="btn btn-primary btn-raised">{% trans %}Next{% endtrans %}</button>
        </div>
      </div>
    </div>
  </form>
</div>
{% endblock wizard_body %}
