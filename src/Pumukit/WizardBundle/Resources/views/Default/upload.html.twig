<script type="text/javascript">
  var uploaded = '{{ uploaded }}';
  if ('success' == uploaded){
    var option = '{{ option }}';
    if ('single' == option){
      var id = '{{ mm.id }}';
      var route = "{{ path('pumukitwizard_default_end', {'id': '__id__'}) }}";
      route = route.replace('__id__', id);
    }else{
      var route = "{{ path('pumukitwizard_default_end') }}";
    }
    parent.$('#pumukitwizard_body').load(route, {'_method':'POST'});
    parent.success('{% trans %}New Track(s) added.{% endtrans %}');
  }else{
    var message = "{{ message }}";
    parent.$('#pumukitwizard_body').load("{{ path('pumukitwizard_default_error') }}", {'errormessage': message, '_method': 'POST'});
    parent.no_success('{{ message }}');
  }
</script>
