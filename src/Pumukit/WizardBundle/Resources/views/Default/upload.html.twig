<script type="text/javascript">
  var uploaded = '{{ uploaded }}';
  if ('success' == uploaded){
    var seriesId = "{{ seriesId }}";
    var option = "{{ option }}";
    if ('single' == option){
      var mmId = "{{ mmId }}";
      var route = "{{ path('pumukitwizard_default_end', {'seriesId': '__seriesId__', 'mmId': '__mmId__'})|raw }}";
      route = route.replace('__seriesId__', seriesId);
      route = route.replace('__mmId__', mmId);
    }else{
      var route = "{{ path('pumukitwizard_default_end', {'seriesId': '__seriesId__'})|raw }}";
      route = route.replace('__seriesId__', seriesId);
    }
    parent.$('#pumukitwizard_body').load(route, {'_method':'POST'});
    parent.success('{% trans %}New Track(s) added.{% endtrans %}');
  }else{
    var message = "{{ message }}";
    parent.$('#pumukitwizard_body').load("{{ path('pumukitwizard_default_error') }}", {'errormessage': message, '_method': 'POST'});
    parent.no_success('{{ message }}');
  }
</script>
