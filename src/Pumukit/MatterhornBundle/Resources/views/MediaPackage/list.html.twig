<div class="table-responsive well">
    <table class="table table-striped table-hover">

      <thead>
        <tr>
          <th width="1%">
            <div class="checkbox">
              <label>
                <input type="checkbox" onclick="window.click_checkbox_all('user', this.checked)">
              </label>
            </div>
          </th>
          <th colspan="2" width="3%"></th>
          <th width="1%">{% trans %}Id{% endtrans %}</th>
          <th>{% trans %}Name{% endtrans %}</th>
          <th>{% trans %}Series{% endtrans %}</th>
          <th>{% trans %}Duration{% endtrans %}</th>
          <th>{% trans %}Date{% endtrans %}</th>
          <th></th>
        </tr>
      </thead>
  
      <tbody>

        {% if mediaPackages is empty %}
        <tr>
          <td colspan="9">
            {% trans %}There are no mediapackages with those values.{% endtrans %}
          </td>
        </tr>
        {% endif %}

        {% for mediaPackage in mediaPackages %}
        <tr>
          <td>
            <div class="checkbox">
              <label>
                <input id="{{ mediaPackage.id }}" class="user_checkbox" type="checkbox" size="1">
              </label>
            </div>
          </td> 
          <td colspan="2" width="3%"></td>   
          <td>
            {{ mediaPackage.id }}
          </td>
          <td>
            {% if mediaPackage.title is not empty %}{{ mediaPackage.title }}{% endif %}
          </td>
          <td>
          </td>
          <td>
            {{ mediaPackage.duration|date("i:s") }}
          </td>
          <td>
            {{ mediaPackage.start|date("d/m/Y") }}
          </td>
        </tr>
      {% endfor %}
      </tbody>

      <tfoot>
        <tr>
          <th colspan="9">
            <div class="col-md-8">
              
            <div class="col-md-4 text-right">
              <div class="pagerfanta">
                {{ pagerfanta(mediaPackages, 'twitter_bootstrap3', {"css_container_class": "pagination pagination-sm", "next_message": "&raquo;", "prev_message": "&laquo;", "routeName": "pumukitnewadmin_ingester_index"}) }}
              </div>
            </div>                
          </th>
        </tr>
      </tfoot>

    </table>
</div>