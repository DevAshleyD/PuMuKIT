<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="pumukit_responsive_web_tv.breadcrumbs_all_title">All</parameter>
        <parameter key="pumukit_responsive_web_tv.breadcrumbs_all_route">pumukit_responsive_webtv_medialibrary_index</parameter>
        <parameter key="pumukit_responsive_web_tv.default_pic">/bundles/pumukitresponsivewebtv/images/no_pic.jpg</parameter>
    </parameters>

    <services>
        <service id="twig.extension.intl" class="Twig_Extensions_Extension_Intl">
            <tag name="twig.extension" />
        </service>

        <service id="pumukit_responsive_web_tv.filter" class="Pumukit\Responsive\WebTVBundle\Listener\Filter">
          <argument type="service" id="doctrine_mongodb.odm.document_manager" />
          <tag name="kernel.event_listener" event="kernel.request" />
        </service>

        <service id="pumukit_responsive_web_tv.twig_extension" class="Pumukit\Responsive\WebTVBundle\Twig\PumukitExtension">
          <argument type="service" id="doctrine_mongodb.odm.document_manager" />
          <argument type="service" id="router.request_context" on-invalid="ignore" />
          <argument>%pumukit_responsive_web_tv.default_pic%</argument>
          <tag name="twig.extension" />
        </service>

        <service id="pumukit_responsive_web_tv.breadcrumbs" class="Pumukit\Responsive\WebTVBundle\Services\BreadcrumbsService">
          <argument type="service" id="router" />
          <argument type="service" id="session" />
          <argument>%pumukit_responsive_web_tv.breadcrumbs_all_title%</argument>
          <argument>%pumukit_responsive_web_tv.breadcrumbs_all_route%</argument>
          <argument type="service" id="translator" />
        </service>
    </services>
</container>
