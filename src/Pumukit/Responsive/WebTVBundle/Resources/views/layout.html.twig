<!doctype html>
<html class="no-js {% block html_class %}{% endblock %}" lang="en">
  <head>
    {% block meta %}
      <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
      <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
      <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
      <![endif]-->
      <meta charset="UTF-8" />
    {% endblock %}
    <title>{% block title %}Pumukit WebTV{% endblock %}</title>

    {% block stylesheets %}

      <link href="{{ asset('bundles/pumukitresponsivewebtv/css/bootstrap.css') }}" type="text/css" rel="stylesheet" media="screen"/>
      <link href="{{ asset('bundles/pumukitresponsivewebtv/css/bootstrap-theme.css') }}" type="text/css" rel="stylesheet" media="screen"/>
      <link href="{{ asset('bundles/pumukitresponsivewebtv/css/bootstrap-datetimepicker.css') }}" type="text/css" rel="stylesheet" media="screen"/>
      <link href="{{ asset('bundles/pumukitresponsivewebtv/css/default.css') }}" type="text/css" rel="stylesheet" media="screen"/>
      <link href="{{ asset('bundles/pumukitresponsivewebtv/css/cies.css') }}" type="text/css" rel="stylesheet" media="screen"/>
    {% endblock %}

    {% block javascripts %}
      <script src="{{ asset('bundles/pumukitresponsivewebtv/js/jquery-1.10.2.js') }}" type="text/javascript"></script>
      <script src="{{ asset('bundles/pumukitresponsivewebtv/js/jquery-ui.js') }}" type="text/javascript"></script>
      <script src="{{ asset('bundles/pumukitresponsivewebtv/js/bootstrap.js') }}" type="text/javascript"></script>
      <script src="{{ asset('bundles/pumukitresponsivewebtv/js/moment-with-locales.js') }}" type="text/javascript"></script>
      <script src="{{ asset('bundles/pumukitresponsivewebtv/js/bootstrap-datetimepicker.js') }}" type="text/javascript"></script>
    {% endblock %}

    <link rel="shortcut icon" href="/favicon.ico" />  
    <link rel="icon" type="image/x-icon" href="{{ asset('bundles/pumukitresponsivewebtv/images/favicon.ico') }}" />    
  </head>
  <body class="{% block body_class %}{% endblock %}">
    {% block body_base %} 
      <div class="container-fluid">
        <!--HEADER-->
        {% include 'PumukitResponsiveWebTVBundle::header.html.twig' %}
        <div class="row">
          <div class="main-content wrapper-center">
            <!--LATERAL_MENU-->
            <span class="{{ hide_slidebar is defined ? 'hidden-lg':'' }}">
              {% include 'PumukitResponsiveWebTVBundle::slidebar.html.twig'%}
            </span>
            <!--BREADCRUMBS-->
            <div class="row breadcrumb_wrapper hidden-lg" role="navigation">
              {% render(controller('PumukitResponsiveWebTVBundle:Widget:breadcrumbs')) %}
            </div>
            <!--MAIN BODY-->
            <div class="main-content {{ hide_slidebar is defined ? 'row':'col-lg-9' }}">
              {% block body_without_bar %}
                {% block body %}
                {% endblock %}
              {% endblock %}
            </div>
          </div>
        </div>
        <!--</div>-->
        <!--END MAIN BODY-->

        <!--FOOTER-->
        {% include 'PumukitResponsiveWebTVBundle::footer.html.twig' %}
      </div>
    {% endblock %}
  </body>
</html>
