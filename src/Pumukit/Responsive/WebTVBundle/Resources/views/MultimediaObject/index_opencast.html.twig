{% extends 'PumukitResponsiveWebTVBundle::layout.html.twig' %}
{% set hide_slidebar = true %}
{% block javascripts %}
  {{ parent() }}
  <script src="{{ asset('bundles/pumukitresponsivewebtv/js/jwplayer/jwplayer.js') }}" type="text/javascript"></script>
  {% if jwplayer_key is defined %}<script type="text/javascript">jwplayer.key="{{ jwplayer_key }}";</script>{% endif %}
{% endblock%}
{% block stylesheets %}
  {{ parent() }}
  <link href="{{ asset('bundles/pumukitresponsivewebtv/css/opencast.css') }}" type="text/css" rel="stylesheet" media="screen"/>
{% endblock %}


{% block title %}{{ parent() }} - {{ multimediaObject.title }}{% endblock %}
{% block keywords %}{{ parent() }} - {{ multimediaObject.keyword }}{% endblock %}

{% block body_class %}
  opencast-layout
{% endblock %}
{% block body_without_bar %}
  <span class="hidden-sm hidden-xs"></br></span>
  <div id ="mh_player" class="col-lg-9 mh_player collapsed">
    {% include 'PumukitResponsiveWebTVBundle:MultimediaObject:player_opencast.html.twig' %}
    {% include 'PumukitResponsiveWebTVBundle:MultimediaObject:info.html.twig' %}
    <hr>
  </div>
  <div id="sidebar" class="col-lg-3 nopadding sidebar visible-lg">
    <div  class="sidebar_toggle" onclick="mh_animacion();">
      <span class="mh_toggle_img">
      </span>
      <span class="mh_toggle_img">
      </span>
      <span class="mh_toggle_img">
      </span>
    </div>
    {% render(controller('PumukitResponsiveWebTVBundle:MultimediaObject:series', {'multimediaObject': multimediaObject , 'box_title': 'Videos in the same series:'| trans })) %}
    {% render(controller('PumukitResponsiveWebTVBundle:MultimediaObject:related', {'multimediaObject': multimediaObject, 'box_title': 'You may also be interested in:'| trans })) %}
  </div>
  <div class="col-xs-12 hidden-lg">
    {% render(controller('PumukitResponsiveWebTVBundle:MultimediaObject:series', {'multimediaObject': multimediaObject , 'box_title': 'Videos in the same series:'| trans })) %}
    {% render(controller('PumukitResponsiveWebTVBundle:MultimediaObject:related', {'multimediaObject': multimediaObject, 'box_title': 'You may also be interested in:'| trans })) %}
  </div>
  <script type="text/javascript">
   //<![CDATA[
   function mh_animacion(){
       player = $('#mh_player');
       lateral = $('#sidebar');
       if( player.hasClass('collapsed') ){
           player.removeClass('collapsed');
           lateral.addClass('collapsed');
       }else{
           player.addClass('collapsed');
           lateral.removeClass('collapsed');
       }
       return false;
   }
   //]]>
  </script>

{% endblock %}