<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Pumukit{% endblock %}</title>
        <meta name="Keywords" content="{% block keywords %}WebTv, Pumukit{% endblock %}" />
        <!--Block with CSS files-->
        {% block stylesheets %}
            <link href="{{ asset('bundles/pumukitwebtv/css/main.css') }}" type="text/css" rel="stylesheet" media="screen"/>
            <link href="{{ asset('bundles/pumukitwebtv/css/default.css') }}" type="text/css" rel="stylesheet" media="screen"/>
            <link href="{{ asset('bundles/pumukitwebtv/css/css.css') }}" type="text/css" rel="stylesheet" media="screen"/>
            <link href="{{ asset('bundles/pumukitwebtv/css/960.css') }}" type="text/css" rel="stylesheet" media="screen"/>
            <link href="{{ asset('bundles/pumukitwebtv/css/bootstrap.min.css') }}" type="text/css" rel="stylesheet" media="screen"/>
            <link href="{{ asset('bundles/pumukitwebtv/css/bootstrap-datetimepicker.css') }}" type="text/css" rel="stylesheet" media="screen"/>
        {% endblock %}
        <!--Block with Javascript files-->
        {% block javascripts %}
            <script src="{{ asset('bundles/pumukitwebtv/js/jquery-1.10.2.js') }}" type="text/javascript"></script>
            <script src="{{ asset('bundles/pumukitwebtv/js/jquery-ui.js') }}" type="text/javascript"></script>
            <script src="{{ asset('bundles/pumukitwebtv/js/bootstrap.min.js') }}" type="text/javascript"></script>
            <script src="{{ asset('bundles/pumukitwebtv/js/moment-with-locales.js') }}" type="text/javascript"></script>
            <script src="{{ asset('bundles/pumukitwebtv/js/bootstrap-datetimepicker.js') }}" type="text/javascript"></script>
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('bundles/pumukitwebtv/images/favicon.ico') }}" />
    </head>
    <body>
        {% block body_base %}
        <div id="content" class="container_15">
            <div id="headerbar">
                {% include 'PumukitWebTVBundle::header.html.twig' %}
            </div><!--end div headerbar-->

            <div id="body">
                {% block body_without_bar %}
                <div id="slidebar" class="grid_3">
                    {% include 'PumukitWebTVBundle::slidebar.html.twig' %}
                </div>
                <div id="other_body" class="grid_12">
                    {% block body %}{% endblock %}
                </div>
                {% endblock %}
                <div style="clear:both"></div>
            </div>

            <div id="footerbar">
                {% include 'PumukitWebTVBundle::footer.html.twig'%}
            </div>
            <div style="clear:both; text-align: right; padding: 10px 0px 0px 10px; font-size: 11px; ">
                <img alt="PuMuKIT icon" src="{{ asset('bundles/pumukitwebtv/images/favicon.ico') }}" style="width: 10px;">
                <a href="http://pumukit.org" style="color:#000; text-decoration: none; ">
                    Powered by <span style="font-style: italic">PuMuKIT</span>
                </a>
            </div>
        </div>
        {% endblock %}
    </body>
</html>
