{% if template == "date" or template == "date_subserial" %}
  <!--DATE-->
  {% if current_date != last_date  %}
    <div class="row">
      <h3> {{ current_date }}</h3>
    </div>
  {% endif %}
{% endif %}
{% if template == "subserial" or template == "date_subserial" %}
  <!-- SUBSERIAL -->
  {% if subserie_title != last_subseriestitle %}
    <div class="row subseries_title_wrapper">
      <h4 class="text-center subseries_title"> {{ subserie_title }} </h4>
    </div>
  {% endif %}
{% elseif template == "multisubserial" %}
  <!-- MULTISUBSERIAL -->
  {% set subseries_now = ( subserie_title | split("\\n") ) %}
  {% set subseries_before = ( last_subseriestitle  | split("\\n") ) %}
  {% for key, subserie_title in subseries_now %}
    {%  if subserie_title is not same as ( subseries_before[key] | default('') ) %}
      <div class="row">
        <h4 class="text-center"> {{ subserie_title }} </h4>
      </div>
    {% endif %}
  {% endfor %}
{% endif %}

{% if subseries %}
  <hr>
{% endif %}
