<div id="serial_body" style="display:block;">

{% set lastDate = '--' %}
{% set lastSubserialTitle = 0 %}

  	<div style="overflow:hidden">

  	{% for multimediaObject in multimediaObjects %}

    	{% if multimediaObject.getRecordDate()|date("d/m/Y") != lastDate %}
      		<div style="clear:both;"></div>
      		<br />
      		<div class="serial_date">
        		{{ multimediaObject.getRecordDate()|date("d/m/Y") }}
      		</div>
    	{% endif %}

    	<!--Objeto multimedia-->
    	<div style="cursor:pointer;" onclick="window.location='/video/{{multimediaObject.getId()}}'">
      		<div class="pumukit_mmobjs" style="width:50%; float:left;">
        		<div class="pumukit_mmobj" style="float:left;">
          			<div class="picture" style="position: relative;
            			width: 130px;
            			height: 110px;
            			float: left;
            			margin: 10px;
            			margin-right: 20px;">
            			<a href="/video/{{multimediaObject.getId()}}">
              			<img src="{{ multimediaObject|first_url_pic(true) }}"></img>
                    <span class="video-duration" style="top: 4px;
                      position: absolute;
                      z-index:10; 
                      background-color:#000;
                      color: #FFF;
                      padding: 0px 4px;
                      font-size: 11px;
                      font-weight: normal;
                      text-shadow: none;
                      height: 14px;
                      line-height: 14px;
                      opacity: 0.75;
                      filter: alpha(opacity=75);
                      display: -moz-inline-stack;
                      vertical-align: top;
                      zoom: 1;
                      display: inline-block;
                      font-family: Verdana, Arial, sans-serif;">{{multimediaObject.getDuration()|date("i:s")}}
                    </span>
            			</a>
          			</div>

          			<div class="info">
            			<div class="title"><a href="/video/{{multimediaObject.getId()}}">{{multimediaObject.getTitle()}}</a></div>
            			<div class="subtitle"><abbr title="{{multimediaObject.getSubtitle()}}">{{multimediaObject.getSubtitle()}}</abbr></div>
            			<div class="date" style="font-size: 85%;">{{multimediaObject.getRecordDate()|date("d/m/Y")}}</div>
                  <div class="mmobj_bottom" style="bottom: 16px;right:16px;">Visto {{multimediaObject.getNumview()}} veces</div>
          			</div>

        		</div>
      		</div>
    	</div>

    	{% set lastDate = multimediaObject.getRecordDate()|date("d/m/Y") %}
    	{% set lastSubserialTitle = multimediaObject.getSubtitle() %}

    {% endfor %}

  	</div>

</div>