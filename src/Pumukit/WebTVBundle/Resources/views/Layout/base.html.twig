<!doctype html>
<html class="{% block html_class %}{% endblock %}" lang="en">
  <head>
    {% block meta %}
      <meta name="viewport" content="initial-scale=1">
      <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
      <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
      <![endif]-->
      <meta charset="UTF-8" />
    {% endblock %}
    <title>{% block title %}Pumukit WebTV{% endblock %}</title>

    {% block stylesheets %}
      <link href="{{ asset('bundles/pumukitwebtv/css/bootstrap.css') }}" type="text/css" rel="stylesheet" media="screen"/>
      <link href="{{ asset('bundles/pumukitwebtv/css/bootstrap-datetimepicker.css') }}" type="text/css" rel="stylesheet" media="screen"/>
      <link href="/webtv/css/webtv.css" type="text/css" rel="stylesheet" media="screen"/>
    {% endblock %}

    {% block javascripts %}
      <script src="{{ asset('bundles/pumukitwebtv/js/jquery.js') }}" type="text/javascript"></script>
      <script src="{{ asset('bundles/pumukitwebtv/js/jquery-ui.js') }}" type="text/javascript"></script>
      <script src="{{ asset('bundles/pumukitwebtv/js/bootstrap.js') }}" type="text/javascript"></script>
      <script src="{{ asset('bundles/pumukitwebtv/js/moment-with-locales.js') }}" type="text/javascript"></script>
      <script src="{{ asset('bundles/pumukitwebtv/js/bootstrap-datetimepicker.js') }}" type="text/javascript"></script>
    {% endblock %}

    {% block favicon %}
      <link rel="icon" type="image/x-icon" href="{{ asset('bundles/pumukitwebtv/images/favicon.ico') }}" />
    {% endblock %}
  </head>
  <body class="{% block body_class %}{% endblock %}">
    {% block body_base %}
      <div class="container-fluid">
        <!--HEADER-->
        {% include 'PumukitWebTVBundle:Layout:header.html.twig' %}
        <!--BREADCRUMBS-->
        <div class="row breadcrumbs_color">
          <div class="breadcrumbs_wrapper" role="navigation">
            {% render(controller('PumukitWebTVBundle:Widget:breadcrumbs')) %}
          </div>
        </div>
        <div class="row">
          <div class="main-content wrapper-center">
            <!--LATERAL_MENU-->
            <span class="{{ hide_slidebar is defined ? 'hidden':'visible-lg' }}">
              {% include 'PumukitWebTVBundle:Layout:slidebar.html.twig'%}
            </span>
            <!--MAIN BODY-->
            <div class="main-content {{ hide_slidebar is defined ? 'row':'col-lg-9' }}">
              {% block body_without_bar %}
                {% block body %}
                {% endblock %}
              {% endblock %}
            </div>
            <div style="clear:both"><!--LETS THE WRAPPER HAVE THE CORRECT HEIGHT--></div>
          </div>
        </div>
        <!--</div>-->
        <!--END MAIN BODY-->

        <!--FOOTER-->
        <div class="row">
          {% include 'PumukitWebTVBundle:Layout:footer.html.twig' %}
        </div>
        {% block powered_by %}
        <div style="clear:both; text-align: right; padding: 10px 10px 10px 10px; font-size: 11px; position: relative;">
          <img alt="PuMuKIT icon" src="{{ asset('bundles/pumukitwebtv/images/favicon.ico') }}" style="width: 10px;">
          <a href="http://pumukit.org" style="color:#000; text-decoration: none; ">
          Powered by <span style="font-style: italic">PuMuKIT</span>
          </a>
        </div>
        {% endblock %}
      </div>
    {% endblock %}
  </body>
</html>
