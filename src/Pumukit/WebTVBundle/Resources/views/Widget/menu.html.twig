<div class="row widget slidebar">
  <ul>
    <!-- Principal -->
    <li>
      <a href="{{ path('pumukit_webtv_index_index')}}"
         class="element {{menu_selected=="pumukit_webtv_index_index"?'selected':''}}">
        {{ home_title |trans }}
      </a>
    </li>

    <!-- Announces -->
    <li>
      <a href="{{ path('pumukit_webtv_announces_latestuploads') }}"
         class="element {{menu_selected == 'pumukit_webtv_announces_latestuploads'? 'selected' : ''}}">
        {{ announces_title |trans }}
      </a>
    </li>

    <!-- Search -->
    <li>
      <a href="{{ path('pumukit_webtv_search_multimediaobjects')}}"
         class="element {{menu_selected=="pumukit_webtv_search_multimediaobjects"?'selected':''}}">
        {{ search_title |trans}}
      </a>
    </li>


    <!-- Live Channels -->
    {% for live in live_channels %}
      <li>
        <a href="{{ path('pumukit_live_id', {'id': live.id})}}"
           class="element">
          {{ live.name | default('No title') | trans }}
        </a>
      </li>
    {% endfor %}

    <!-- Mediateca -->
    <li>
      <a href="{{ path('pumukit_webtv_medialibrary_index') }}"
         class="element {{menu_selected=="pumukit_webtv_medialibrary_index"?'selected':''}}">
        {{ mediateca_title |trans }}
      </a>
    </li>

    <!-- Videos by category -->
    <li>
      <a href="{{ path('pumukit_webtv_categories_index') }}"
         class="element {{menu_selected=="pumukit_webtv_categories_index"?'selected':''}}">
        {{ categories_title |trans }}
      </a>
    </li>
  </ul>
</div>

{% if menu_stats %}
  <div class="row widget slidebar stats">
    {% render(controller('PumukitWebTVBundle:Widget:stats')) %}
  </div>
{%  endif %}
