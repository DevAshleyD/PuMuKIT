<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        <meta name="keywords" content="{% block keywords %}WebTV, pumukit{% endblock keywords %}">
        {% block stylesheets %}
            <link href="{{ asset('bundles/pumukitwebtv/css/main.css') }}" type="text/css" rel="stylesheet" media="screen"/>
            <link href="{{ asset('bundles/pumukitwebtv/css/default.css') }}" type="text/css" rel="stylesheet" media="screen"/>
            <link href="{{ asset('bundles/pumukitwebtv/css/css.css') }}" type="text/css" rel="stylesheet" media="screen"/>
            <link href="{{ asset('bundles/pumukitwebtv/css/960.css') }}" type="text/css" rel="stylesheet" media="screen"/>
            <link href="{{ asset('bundles/pumukitwebtv/css/bootstrap.css') }}" type="text/css" rel="stylesheet" media="screen"/>
        {% endblock %}
        {% block javascripts %}

        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('bundles/pumukitwebtv/images/favicon.ico') }}" />
    </head>
    <body>
        <div id="content" class="container_15">
            <div id="headerbar">
                {% include 'PumukitWebTVBundle::header.html.twig' %}
            </div><!--end div headerbar-->

            <div id="body">
                <div id="other_body">
                    {% block body %}{% endblock %}
                </div>
                <div style="clear:both"></div>
            </div>

            <div id="footerbar">
                {% include 'PumukitWebTVBundle::footer.html.twig'%}
            </div>
            <div style="clear:both; text-align: right; padding: 10px 0px 0px 10px; font-size: 11px; ">
                <img alt="Icono de Pumukit" src="{{ asset('bundles/pumukitwebtv/images/favicon.ico') }}" style="width: 10px;">
                <a href="http://pumukit.org" style="color:#000; text-decoration: none; ">
                    Powered by <span style="font-style: italic">PumuKIT V 2.0</span>
                </a>
            </div>
        </div>
    </body>
</html>
