<h1 class="widget text-center widget_password">
    {% trans %}Private Video{% endtrans %}
</h1>
<div class="grid_10 mm_player">
    <div class="date"></div>
    <h2 class="text-center">{% trans %}This video is private with restricted access{% endtrans %}.</h2>
</div>
<div class="grid_5">
    <h3 class="text-center">{% trans %}Enter a valid password to watch it{% endtrans %}.</h3>
    <br/>
    <div class="text-center">
        <form name="passwdForm" method="post">
            <div class="col-md-12">
                <input class="form-control" id="broadcast_password" name="broadcast_password" type="password" aria-label="password" placeholder="{% trans %}Introduce a password{% endtrans %}..." value="" size="17" maxlength="256" style="margin:0 auto !important; width: 190px;"/>
            </div>
            <div class="col-md-12 text-center">
                <span id="player_password_check_fail" style="{{ invalid_password ? '':'display: none;' }}">
                    {% trans %}Password is not valid{% endtrans %}.
                </span>
            </div>
            <div class="col-md-12">
                <button type="submit" class="btn btn-primary btn-flat" style="margin-top:10px;" title="{% trans %}Log In{% endtrans %}">
                    {% trans %}Enter pass{% endtrans %}
                </button>
            </div>
        </form>
    </div>
</div>
