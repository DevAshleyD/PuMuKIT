{% extends 'PumukitWebTVBundle::layout.html.twig' %}

{% block body %}

    {% set eventsNowIds = [] %}

    <h1 class="titulo_widget">{% trans %}Events{% endtrans %}</h1>

    {% if eventsNow is empty and eventsToday is empty and eventsFuture is empty %}
        <div class="row">
            <div class="col-xs-12" style="margin-top:20px;">
                <p>
                    {% trans %}
                    There are no scheduled live events. You will find ended live events in the series catalogue or through the media portal search.
                    {% endtrans %}
                </p>
            </div>
        </div>
    {% else %}
        {% if eventsNow|length > 0 %}
            <div class="row">
                <div class="col-xs-12">
                    <ul>
                        <li class="categories_list" style="list-style-type: none; margin-top: 0px;">
                            <div class="unedtv_mmobjs unedtv_series">
                                <div class="unedtv_mmobj_categories" style="width: 100%; background-color: #FFF;">
                                    <h6 class="uned_announces_title">{% trans %}Now events{% endtrans %}</h6>
                                    {% for eventNow in eventsNow %}
                                        {% set eventsNowIds = eventsNowIds|merge([eventNow['_id']]) %}
                                        {% include 'PumukitWebTVBundle:Event:multimediaobject.html.twig' with {'cols': numberCols, 'event': eventNow['data'], 'defaultPic' : defaultPic} %}
                                    {% endfor %}
                                </div>
                            </div>
                            <div style="width:100%"></div>
                        </li>
                    </ul>
                </div>
            </div>
        {% endif %}

        {% if eventsToday|length > 0 %}
            <div class="row">
                <div class="col-xs-12">
                    <ul>
                        <li class="categories_list" style="list-style-type: none; margin-top: 0px;">
                            <div class="unedtv_mmobjs unedtv_series">
                                <div class="unedtv_mmobj_categories" style="width: 100%; background-color: #FFF;">
                                    <h6 class="uned_announces_title">{% trans %}Today events{% endtrans %}</h6>
                                    {% for eventToday in eventsToday %}
                                        {% set nowAndToday = false %}
                                        {% for eventNowId in eventsNowIds %}
                                            {% if eventToday['_id'] == eventNowId %}
                                                {% set nowAndToday = true %}
                                            {% endif %}
                                        {% endfor %}
                                        {% if eventToday['data'] is defined and not nowAndToday %}
                                            {% include 'PumukitWebTVBundle:Event:multimediaobject.html.twig' with {'cols': numberCols, 'event': eventToday['data'], 'defaultPic' : defaultPic} %}
                                        {% endif %}
                                    {% endfor %}
                                </div>
                            </div>
                            <div style="width:100%"></div>
                        </li>
                    </ul>
                </div>
            </div>
        {% endif %}

        {% if eventsFuture|length > 0 %}
            <div class="row">
                <div class="col-xs-12">
                    <ul>
                        <li class="categories_list" style="list-style-type: none; margin-top: 0px;">
                            <div class="unedtv_mmobjs unedtv_series">
                                <div class="unedtv_mmobj_categories" style="width: 100%; background-color: #FFF;">
                                    <h6 class="uned_announces_title">{% trans %}Future events{% endtrans %}</h6>
                                    {% for eventFuture in eventsFuture %}
                                        {% if eventFuture['data'] is defined %}
                                            {% include 'PumukitWebTVBundle:Event:multimediaobject.html.twig' with {'cols': numberCols, 'event': eventFuture['data'], 'defaultPic' : defaultPic} %}
                                        {% endif %}
                                    {% endfor %}
                                </div>
                            </div>
                            <div style="width:100%"></div>
                        </li>
                    </ul>
                </div>
                <div class="col-xs-12 text-center">
                    {{ pagerfanta(eventsFuture, 'twitter_bootstrap3_translated') }}
                </div>
            </div>
        {% endif %}

    {% endif %}

{% endblock %}
