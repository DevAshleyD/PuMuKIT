<div id="serial_body" style="display:block;">

{% set lastDate = '--' %}

  	<div style="overflow:hidden">

  	{% for serie in series %}

    	{% if serie.getPublicDate()|date("d/m/Y") != lastDate %}
      		<div style="clear:both;"></div>
      		<br />
      		<div class="serial_date">
        		{{ serie.getPublicDate()|date("d/m/Y") }}
      		</div>
    	{% endif %}

    	<!--Serie-->
    	<div style="cursor:pointer;" onclick="window.location='/series/{{serie.getId()}}'">
      	<div class="pumukit_mmobjs" style="width:50%; float:left;">
        	<div class="pumukit_mmobj" style="float:left;">
          
          	<figure class="album" style="margin:2px 20px 2px 2px">  
              <a href="/series/{{serie.getId()}}">
                <div class="picture">
                  <img src="{{ asset('bundles/pumukitwebtv/images/folder.png') }}"></img>
                </div>
                <div class="picture">
                  <img src="{{ asset('bundles/pumukitwebtv/images/folder.png') }}"></img>
                </div>
                <div class="picture">
                  <img src="{{ asset('bundles/pumukitwebtv/images/folder.png') }}"></img>
                </div>
              </a>
            </figure>

          	<div class="info" style="padding-top: 3%;">
            	<div class="title">
              	<a href="/series/{{serie.getId()}}">{{serie.getTitle()}}</a>
            	</div>
            	<div class="subtitle">
              	<abbr title="{{serie.getSubtitle()}}">{{serie.getSubtitle()}}</abbr>
            	</div>
            	<div class="mmobj_bottom" style="bottom: 10px;right: 16px;">{{serie.getPublicDate()|date("d/m/Y")}}</div>
          	</div>

        	</div>
      	</div>
    	</div>

    	{% set lastDate = serie.getPublicDate()|date("d/m/Y") %}

    {% endfor %}

  	</div>
    
</div>