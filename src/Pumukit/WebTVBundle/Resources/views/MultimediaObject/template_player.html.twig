{% if multimediaObject %}
    <script>
        function resizeFrame(elem) {
            var width = $(elem).width();
            var height = width / 16 * 9;
            $(elem).height(height);
        }

        $(window).resize(function () {
            resizeFrame($('#paellaiframe'));
        });
    </script>

    {% if multimediaObject.getProperty('externalplayer') and not app.request.get('track_id') %}
        <iframe id="paellaiframe" onload="resizeFrame(this)" src="{{ multimediaObject.getProperty('externalplayer') }}" width="100%" class="embed-responsive-item" allowfullscreen></iframe>
    {% else %}
        {% include '@PumukitWebTV/MultimediaObject/player.html.twig' with {'responsive': true} %}
    {% endif %}
{% endif %}

