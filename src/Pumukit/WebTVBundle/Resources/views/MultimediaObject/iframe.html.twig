<script src="{{ asset('bundles/pumukitwebtv/js/jwplayer/jwplayer.js') }}" type="text/javascript"></script>
{% if track %}
<video id="player1" controls></video>
<script type="text/javascript">
  jwplayer("player1").setup({
    {% if intro %}
    playlist: [{
      file: "{{intro}}",
      {% if multimediaObject.getFirstUrlPic() %}
      image: "{{ multimediaObject.getFirstUrlPic() }}",
      {% endif %}
    },{
      file: "{{track.url}}",
      {% if multimediaObject.getFirstUrlPic() %}
      image: "{{ multimediaObject.getFirstUrlPic() }}",
      {% endif %}
    }],
    {% else %}
    file: "{{track.url}}",
    {% if multimediaObject.getFirstUrlPic() %}
    image: "{{ multimediaObject.getFirstUrlPic() }}",
    {% endif %}
    {% endif %}
    startparam: "start",
    autostart: {{ autostart|default("true") }},
    repeat: "false",
    width: {{ width|default("620") }},
    height: {{ height|default("465") }}
  });
</script>
{% else %}
<div style="color: white; background: black; width: {{ width|default('620') }}px; height: {{ height|default('465') }}px; text-align: center;vertical-align: middle;display: table-cell;">
  No track.
</div>
{% endif %}
