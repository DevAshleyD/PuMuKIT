    position: absolute;
    left: 150px;
}
.language_select_wrapper {
    float: right;
    margin: 8px;
}
.language_select_wrapper .btn{
    background: none;
    border: none;
}

.main-content {
    margin: 0 auto;
    background: {{ content_background }};
    min-height: 600px;
    max-width: {{ content_max_width }};
    padding-bottom: 20px;
}
.menu {
    background: {{ menu_background }};
    border: 0;
}
.mobile_header {
    background: {{ header_background }};
}
