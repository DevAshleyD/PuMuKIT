/*Thumbnails*/
.thumbnail {
    width: 135px;
    height: 98px;
    float: left;
    display: inline;
    margin-bottom:0px;
    text-align: center;
    border: 0;
    border-radius: 0px;
    box-shadow: 1px 1px 2px #666;
    background: #F3F3F3;
    padding: 4px;
    z-index: 3;
    position: relative;
}
.thumbnailwrapper {
    padding-left: 0px;
    min-width:132px;
}
.thumbnail.bodyMm {
    margin-bottom: 5px;
}
.thumbnail img.thumbnailimg{
    margin: 0 auto;
    max-width: 120px;
    max-height: 90px;
    display: inline-block;
    vertical-align: middle;
}
.thumbnailholder {
    position: absolute;
    top: 4px;
    width: 127px;
    height: 90px;
    background:#000;
    z-index: -1;
}
.thumbnailo:nth-child(1) {
    z-index: 3;
    position: relative;
}
.thumbnailo:nth-child(2) {
    z-index: 2;
    transform: scale(0.97);
    position: absolute;
    left: 7px;
    top: 3px;
}
.thumbnailo:nth-child(3) {
    z-index: 1;
    transform: scale(0.94);
    position: absolute;
    left: 14px;
    top: 6px;
}
.video-duration {
    position: absolute;
    bottom: 8%;
    right: 8%;
    color: white;
    font-size: 0.8em;
    background:rgba(0,0,0,0.65);
    padding: 1px 3px;
}
