{% block body %}
{# SET VARIABLES #}
{% set default_contrast_background = default_contrast_background | default("#ed6d00") %}
{% set default_light_background = default_light_background | default("#fff") %}
{% set default_content_background = default_content_background | default("#fff") %}

{% set default_contrast_font = default_contrast_font | default("#fff") %}
{% set default_light_font = default_light_font | default("#ed6d00") %}
{% set default_content_font = default_content_font | default("#111") %}
{% set default_content_link_font = default_content_link_font | default("#222") %}
{% set default_content_link_selected_font = default_content_link_selected_font | default("#444") %}

{% set breadcrumbs_separator = breadcrumbs_separator | default('Â»') %}
{% set content_max_width = content_max_width | default("1400px") %}
{% set menu_stats = menu_stats | default(true) %}
{% set menu_padding = menu_padding | default("10px 10px 10px 30px") %}
{% set page_background = page_background | default("#ddd") %}

{# DEPENDABLE: If not set they will use other variables as default #}
