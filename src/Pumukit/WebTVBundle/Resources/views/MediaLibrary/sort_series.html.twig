<div class="lib_menu">


  <!--Toggle whit filter (SIN ACABAR)-->
  <div style="float: right" class="lib_menu_view">
    <a href="#" onclick="$('#search_div').toggle('slow','linear');">Filter</a>
  </div>

  <!--Methods to order series -->
  <div class="lib_menu_sort">
    <span>{% trans %}Sort by{% endtrans %}:</span>  
    <a href="{{ path('pumukit_webtv_medialibrary_index', {'sort': 'date'}) }}">{% trans %}Date{% endtrans %}</a>,
    <a href="{{ path('pumukit_webtv_medialibrary_index', {'sort': 'alphabetically'}) }}">{% trans %}Alphabetically{% endtrans %}</a>
    {%- for tag in tags -%}
      , <a href="{{ path('pumukit_webtv_medialibrary_index', {'sort': 'tags', 'p_tag': tag.cod }) }}">{{ tag.title }}</a>
    {%- endfor -%}.
  </div>

  <div style="clear: right"></div>
</div>

<!--Searching series by title-->
<div id="search_div" style="margin: 10px; padding: 5px 0px; border: 2px solid #999999; background-color: #eee;overflow: hidden;">
  <form>
   {% if(app.request.query.has('p_tag')) %}
     <input type="hidden" name="p_tag" value="{{app.request.query.get('p_tag')}}" />
   {% endif %}

    <div class="input-group" style="width: 50%; margin: 0 auto;">
      <input type="text" class="form-control" name="search" maxlength="100" value="{{app.request.query.get('search')}}" placeholder="" style="height:30px;">
      <span class="input-group-btn" style="cursor:pointer;">
        <button class="btn btn-default" type="button">
          <span class="glyphicon glyphicon-search">
          </span>
        </button>
      </span>
    </div>
  </form>

</div>

