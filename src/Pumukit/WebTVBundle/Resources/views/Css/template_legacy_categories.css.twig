{% set default_light_background = default_light_background | default("#767676") %}
{% set default_light_font = default_light_font | default("#fff") %}

.img_category img{
    width: 100%;
}
.img_category{
    position: relative;
    height: 100%;
}

a:hover .cover {
    background: {{ default_light_font }};
    color: {{ default_light_background }};

}
.cover {
    background: {{ default_light_background }};
    color: {{ default_light_font }};
    font-weight: bold;
    font-size: 120%;
    width: 100%;
    padding: 8px;
}
