{% extends 'PumukitAdminBundle::base.html.twig' %}


{% block title -%}
Person list
{% endblock %}


{% block body -%}
    <table class="records_list table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Web</th>
                <th>Phone</th>
                <th>Honorific</th>
                <th>Firm</th>
                <th>Post</th>
                <th>Bio</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_person_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.web }}</td>
                <td>{{ entity.phone }}</td>
                <td>{{ entity.honorific }}</td>
                <td>{{ entity.firm }}</td>
                <td>{{ entity.post }}</td>
                <td>{{ entity.bio }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_person_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_person_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_person_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock %}
