<table cellspacing="0" class="tv_admin_list">
  <thead>
    <tr>
      <th width="1%">
        <input type="checkbox" onclick="window.click_checkbox_all('direct', this.checked)">
      </th>
      <th colspan="3" width="5%"></th>
      <th width="1%">{% trans %}Id{% endtrans %}</th>
      <th>{% trans %}Nombre{% endtrans %}</th>
      <th>{% trans %}URL{% endtrans %}</th>
      <th width="1%">{% trans %}Resoluci&oacute;n{% endtrans %}</th>
      <th width="8%">{% trans %}Type{% endtrans %}</th>
    </tr>
  </thead>
  
  <tbody>
  {% if directs|length == 0 %}
    <tr class="tv_admin_row_1">
      <td colspan="9" >
       {% trans %}No existen canales en directo con esos valores.{% endtrans %}
      </td>
    </tr>
  {% else %}
    {% for direct in directs %}
      <tr onmouseover="Element.addClassName(this,'tv_admin_row_over')" onmouseout="Element.removeClassName(this,'tv_admin_row_over')" class="tv_admin_row_{{ loop.index % 2 }} {# TODO <?php if($direct->getId() == $sf_user->getAttribute('id', null, 'tv_admin/direct')) echo ' tv_admin_row_this'?> #}" >
        <td>
          <input id="{{ direct.id }}" class="direct_checkbox" type="checkbox">
        </td>
        <td onclick="click_fila('direct', this, {{ direct.id }});">
    	<a title="{% trans %}Editar canal en directo {% endtrans %}{{ direct.id }}" onclick="Modalbox.show(this.href, {title:this.title, width:800}); return false;" href="{{ path('pumukitadmin_direct_update', {'id': direct.id}) }}"><img alt="{% trans %}editar{% endtrans %}" title="{% trans %}editar{% endtrans %}" src="/legacy/images/admin/mbuttons/edit_inline.gif"></a>    
        </td>
        <td>
          <form action="{{ path('pumukitadmin_direct_delete', {'id': direct.id}) }}" method="post" class="delete-action-form" novalidate="">
              <input type="hidden" name="_method" value="DELETE">
              <input type="hidden" name="confirmed" value="true">
              <button type="submit" class="tv_admin_row_delete">
                  <img alt="{% trans %}borrar{% endtrans %}" title="{% trans %}borrar{% endtrans %}" src="/legacy/images/admin/mbuttons/delete_inline.gif">
              </button>
          </form>
          </a>
        </td>
        <td>
	  <a href="#" onclick="new Ajax.Updater('list_directs', '{{ path('pumukitadmin_direct_copy', {'id': direct.id }) }}', {asynchronous:true, evalScripts:true}); return false;"><img alt="{% trans %}copiar{% endtrans %}" title="{% trans %}copiar{% endtrans %}" src="/legacy/images/admin/mbuttons/copy_inline.gif"></a>
        </td>
        <td onclick="click_fila('direct', this, {{ direct.id }});">
          {{ direct.id }}
        </td>
        <td onclick="click_fila('direct', this, {{ direct.id }});">
	  {{ direct.name }}
        </td>
        <td onclick="click_fila('direct', this, {{ direct.id }});">
	  {{ direct.url }}
        </td>
        <td onclick="click_fila('direct', this, {{ direct.id }});">
	  {{ direct.getResolutionWidth }}x{{ direct.getResolutionHeight }}
        </td>
        <td onclick="click_fila('direct', this, {{ direct.id }});">
	  {{ direct.getDirectType }}
        </td>
      </tr>
    {% endfor %}
  {% endif %}

  </tbody>
  <tfoot>
    <tr>
      <th colspan="9">
        <div class="float-right">
          {{ include('PumukitAdminBundle:Macros:pager_ajax.html.twig', {'name': 'direct', 'page': directs.getCurrentPage, 'total':directs.getNbPages}) }}
        </div>
        {{ (directs.getNbResults > directs.getMaxPerPage ) ? directs.getMaxPerPage : directs.getNbResults }}/{{ directs.getNbResults }} {% trans %}Canales{% endtrans %}
        {#
        <?php $aux = ($total_direct == $total_direct_all?'display:none; ':'')?>
        <?php echo link_to_remote(__('Cancelar búsqueda'), array('before' => '$("filter_directs").reset();', 'update' => 'list_directs', 'url' => 'directs/list?filter=filter ', 'script' => 'true'), array('title' => __('Cancelar la búsqueda actual'), 'style' => 'color:blue; font-weight:normal;'.$aux)) ?>
        #}
      </th>
    </tr>
  </tfoot>
</table>

