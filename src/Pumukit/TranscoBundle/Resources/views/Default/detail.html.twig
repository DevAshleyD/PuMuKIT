<script type="text/ng-template" id="detail.html">

<form name="myForm">
  <div class="control-group" ng-class="{error: myForm.name.$invalid}">
    <label>Id</label>
    <input type="text" name="name" ng-model="cpus.id" required>
    <span ng-show="myForm.name.$error.required" class="help-inline">
        Required</span>
  </div>
 
  <div class="control-group" ng-class="{error: myForm.site.$invalid}">
    <label>IP</label>
    <input type="text" name="site" ng-model="cpus.ip" required>
    <span ng-show="myForm.site.$error.required" class="help-inline">
        Required</span>
    <span ng-show="myForm.site.$error.url" class="help-inline">
        Not a URL</span>
  </div>
  
  <div class="control-group" ng-class="{error: myForm.site.$invalid}">
    <label>SO Type</label>
    <input type="text" name="site" ng-model="cpus.so_type" required>
    <span ng-show="myForm.site.$error.required" class="help-inline">
        Required</span>
    <span ng-show="myForm.site.$error.url" class="help-inline">
        Not a URL</span>
  </div>
  <div class="control-group" ng-class="{error: myForm.site.$invalid}">
    <label>Num Jobs</label>
    <input type="text" name="site" ng-model="cpus.num_jobs" required>
    <span ng-show="myForm.site.$error.required" class="help-inline">
        Required</span>
    <span ng-show="myForm.site.$error.url" class="help-inline">
        Not a URL</span>
  </div>
  <div class="control-group" ng-class="{error: myForm.site.$invalid}">
    <label>Max jobs</label>
    <input type="text" name="site" ng-model="cpus.max_jobs" required>
    <span ng-show="myForm.site.$error.required" class="help-inline">
        Required</span>
    <span ng-show="myForm.site.$error.url" class="help-inline">
        Not a URL</span>
  </div>


 

  <br>
  <a href="#/" class="btn">Cancel</a>
  <button ng-click="save()" ng-disabled="isClean() || myForm.$invalid"
          class="btn btn-primary">Save</button>
  <button ng-click="destroy()"
          ng-show="project.$id" class="btn btn-danger">Delete</button>
</form>

</script>