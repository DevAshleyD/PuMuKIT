{% extends "::base.html.twig" %}
  
{% block body %}
<div class="container">
    <div class="page-header clearfix">
        <h1 class="pull-left">Cpu list </h1>
    </div>
        
    <div ng-app="cpuApp" ng-controller="ListCtrl">
        <div class="row">
            <div class="input-group col-lg-4 clearfix">
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-filter"></span>
                </span>            
                <input ng-model="query" focus type="text" class="form-control">
            </div>
        </div>
            
        <table class="table air-top">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>IP</th>
                    <th>Type</th>
                    <th>Login</th>
                    <th>Password</th>
                    <th>Endpoint</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="cpu in cpus | filter:query | orderBy:orderProp">
                    <td class="col-lg-1">[[cpu.id]]</td>
                    <td>[[cpu.ip]]</td>
                    <td>[[cpu.so_type]]</td>
                    <td>[[cpu.login]]</td>
                    <td>[[  cpu.passwd]]</td>
                    <td><a href="[[cpu.endpoint]]">[[cpu.endpoint]]</a></td>
                    <td class="col-lg-1">
                        <a href="[[cpu.endpoint]]"><span class="icon-file-text-alt   air-right"></span></a>
                        <a href="[[cpu.endpoint]]"><span class="icon-edit air-right"></span></a>
                        <a href="[[cpu.endpoint]]"><i class="icon-save"></i></a>
                    </td>
               </tr>
            </tbody>
        </table>
        
    </div>

</div>
{% endblock %}


{% block stylesheets %}
    <link href="{{ asset('bundles/pumukittransco/css/bootstrap.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('bundles/pumukittransco/css/bootstrap-responsive.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('bundles/pumukittransco/css/font-awesome.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('bundles/pumukittransco/css/index.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}
 
{% block javascripts %}
    <script src="{{ asset('bundles/pumukittransco/js/jquery-2.0.3.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/pumukittransco/js/bootstrap.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/pumukittransco/js/angular.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/pumukittransco/js/angular-resource.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/pumukittransco/js/app.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/pumukittransco/js/directives.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/pumukittransco/js/controllers.js') }}" type="text/javascript"></script>
{% endblock %}