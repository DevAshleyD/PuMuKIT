{% extends 'PumukitFutureWebTVBundle::layout.html.twig' %}

{% block javascripts %}
    {% if scroll_list %}
        {{ parent() }}
        <script src="{{ asset('bundles/pumukitfuturewebtv/js/announces_ajax.js') }}" type="text/javascript"></script>
    {% endif %}
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-xs-12">
            <h1 class="title-for-crumbs">{{ title|default('No title'|trans) }}</h1>
        </div>
        {% if scroll_list %}
            <div class="announces" id="announces"></div>
            <div id="announces_loading" style="display:none">
                <img alt="spinner" class="center-block" src="{{ asset('bundles/pumukitfuturewebtv/images/icons/spinner.gif') }}"/>
            </div>
            <script type="text/javascript">
                var url_latestuploads_pager = "{{ path('pumukit_webtv_byuser_objects_pager', {'username': user.username, 'type': type}) }}";
            </script>
        {% else %}
            {% include 'PumukitFutureWebTVBundle:ByUser:template_list.html.twig' %}
            {% include 'PumukitFutureWebTVBundle:Misc:pager.html.twig' %}
        {% endif %}
    </div>
{% endblock %}
