<h4>{{ object.getTitle()| default('No title'|trans) }}</h4>
{% if object.getSubtitle() %}
    <h5>
        <small>{{ object.getSubtitle()|default ('') }}</small>
    </h5>
{% endif %}
<p>
    {% trans %}Duration{% endtrans %}:
    {{ mmobj_duration(object) | duration_string }}
</p>
<p>
    {% trans %}Viewed{% endtrans %}: <span class="numView">{{ object.getNumview() }}</span>
    {% transchoice object.getNumview() %}
        {0}times|{1}time|]1,Inf]times
    {% endtranschoice %}
</p>

{% if show_video_elements|default(false) %}
    <ul class="list-group">
        {% include "PumukitFutureWebTVBundle:Misc:tracks.html.twig" %}
        {% include "PumukitFutureWebTVBundle:Misc:materials.html.twig" %}
        {% include "PumukitFutureWebTVBundle:Misc:links.html.twig" %}
    </ul>

    {% include "PumukitFutureWebTVBundle:Misc:people.html.twig" %}
{% endif %}